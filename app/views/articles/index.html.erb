<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<% @articles.each do |article| %>
	<h3><%= article.title %></h3>
	<%= link_to 'More', article_path(id: article) %>
	<%= link_to 'Edit', edit_article_path(id: article) %>
	<%= link_to 'Delete', article_path(id: article), method: :delete, data: {confirm: "Really?"} %>
<% end %>

<p><%= link_to 'New', new_article_path %></p>
