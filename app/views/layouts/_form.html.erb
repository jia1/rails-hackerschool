<%= form_for @article do |f| %>
	<p><%= f.label :title %></p>
	<%= f.text_field :title %>
	<p><%= f.label :description %></p>
	<%= f.text_area :description %>
	<p><%= f.submit 'Submit', class: 'btn waves waves-effect' %></p>
<% end %>

<p><%= link_to 'Back', :back, class: 'btn waves waves-effect' %></p>